{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:latest",
  "features": {
    "python": "latest"
  },
  "postCreateCommand": "echo 'export PATH=\"/usr/local/python/3.13.2/bin:$PATH\"' >> ~/.bashrc && echo 'alias python=python3' >> ~/.bashrc",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
      }
    }
  }
}
